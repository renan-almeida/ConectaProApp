<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConectaProApp.View.Cliente.CriarSolicitacaoClient"
             BackgroundColor="#f1f1f1">
<ScrollView>
    <Grid RowDefinitions="Auto, *">
        <!-- Cabeçalho Azul -->
        <Grid Grid.Row="0" VerticalOptions="Start" BackgroundColor="#020202" HeightRequest="58" Padding="10" RowSpacing="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Logo ConectaPro -->
                <Image  Source="iconevoltar.png"
                        HeightRequest="30"
                        WidthRequest="30"
                        VerticalOptions="Center"
                        Grid.Column="0">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnVoltarClicked" />
                    </Image.GestureRecognizers>
                </Image>

            <!-- Espaço vazio no meio, ou poderia usar um Label centralizado se quiser -->

            <!-- Foto da Empresa logada -->
            <Frame HeightRequest="40" WidthRequest="40"
             CornerRadius="20"
             HasShadow="False"
             Padding="0"
             BackgroundColor="White"
             BorderColor="#0f5cc2"
             VerticalOptions="Center"
             HorizontalOptions="End"
             Grid.Column="2">
                <Image Source="empresasemfoto.png" 
                 Aspect="AspectFill" 
                 HeightRequest="40" WidthRequest="40"
                 >
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnFotoEmpresaClicked"/>
                    </Image.GestureRecognizers>
                    <Image.Clip>
                            <EllipseGeometry 
                              Center="20,20"
                              RadiusX="20"
                              RadiusY="20"/>    
                        </Image.Clip>
                </Image>
            </Frame>
        </Grid>

        <VerticalStackLayout Grid.Row="1">
            <Image 
                Source="logo_conectapro_preto.png" 
                HeightRequest="150" 
                WidthRequest="150"
                HorizontalOptions="Center"/>

            <Label Text="Descreva o seu problema"
                   TextColor="Black"
                   FontSize="20"
                   HorizontalOptions="Center"/>
            <Label Text="para nós."
                   TextColor="Black"
                   FontSize="20"
                   HorizontalOptions="Center"
                   />

            <Frame BackgroundColor="White"
                   WidthRequest="361"
                   HeightRequest="420"
                   Margin="16"
                   CornerRadius="30"
                   BorderColor="Black">

                    <VerticalStackLayout Spacing="28" Padding="36">
                        
                    

                    <Entry Placeholder="Qual problema o seu negócio enfrenta?"
                           PlaceholderColor="Gray"
                           WidthRequest="314"
                           TextColor="Black"
                           HeightRequest="0"
                          BackgroundColor="#f1f1f1"
                           Text="{Binding Titulo, Mode=TwoWay}"
                           
                           />
                    <Editor Placeholder="De uma Descrição exata sobre o problema"
                           PlaceholderColor="Gray"
                            BackgroundColor="#f1f1f1"
                            FontSize="14"
                            AutoSize="TextChanges"
                            MaxLength="100"
                            TextColor="Black"
                           WidthRequest="314"
                           HeightRequest="0"
                           Text="{Binding Descricao, Mode=TwoWay}"
                                            />

                        <Entry  TextChanged="OnValorDispostoTextChanged"
                                Placeholder="Valor disposto a pagar R$"
                                PlaceholderColor="Gray"
                                BackgroundColor="#f1f1f1"
                               Keyboard="Numeric"
                                TextColor="Black"
                                WidthRequest="314"
                                HeightRequest="0"
                               Text="{Binding ValorPropostoTexto, Mode=TwoWay}"/>

                        <Picker Title="Segmento do serviço desejado"
                            TitleColor="Gray"
                                BackgroundColor="#f1f1f1"
                                WidthRequest="210"
                                TextColor="Black"
                            ItemsSource="{Binding Segmentos}"
                            SelectedItem="{Binding SegmentoSelecionado}"/>
                    </VerticalStackLayout>
                </Frame>
            <Button Text="Próximo"
                    WidthRequest="240"
                    HeightRequest="50"
                    CornerRadius="15"
                    BackgroundColor="#0f5cc2"
                    BorderColor="Black"
                    BorderWidth="1"
                    FontSize="28"
                    Command="{Binding EtapaDoisCommand}"/>

        </VerticalStackLayout>
    </Grid>
    </ScrollView>
</ContentPage>