<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConectaProApp.View.Cliente.BuscaClient"
             BackgroundColor="#f1f1f1">
    <ScrollView>
        <VerticalStackLayout>
            <!-- Logo -->
            <Image Source="logo_conectapro_preto.png" HeightRequest="100" WidthRequest="100" HorizontalOptions="Center" />

            <!-- Barra de pesquisa -->
            <HorizontalStackLayout HorizontalOptions="Center">
                <Frame Padding="0" Margin="10,0,0,20" BackgroundColor="White" CornerRadius="15" BorderColor="#0F5CC2" HasShadow="False" HeightRequest="44" WidthRequest="300">
                    <Grid ColumnDefinitions="Auto, *" VerticalOptions="Center">
                        <Image Source="lupabusca.png" HeightRequest="16" WidthRequest="16" Margin="10,0" VerticalOptions="Center" HorizontalOptions="Start" />
                        <Entry Grid.Column="1" Placeholder="Busque suas solicitações" Text="{Binding TermoDigitado, Mode=TwoWay}" FontSize="16" WidthRequest="280" HeightRequest="44" BackgroundColor="Transparent" VerticalOptions="Center" HorizontalOptions="Start" TextColor="Black" PlaceholderColor="Gray" Margin="0" />
                    </Grid>
                </Frame>
                <Button Command="{Binding AcionarBuscaCommand}" Text="➤" FontSize="18" CornerRadius="100" HeightRequest="45" WidthRequest="45" BackgroundColor="#0f5cc2" Margin="15,0,0,20" />
            </HorizontalStackLayout>

            <!-- Categorias -->
            <Frame Padding="0" Margin="10" BackgroundColor="White" CornerRadius="15" HasShadow="False" HorizontalOptions="Center" WidthRequest="390">
                <VerticalStackLayout>
                    <Label Text="Categorias" TextColor="Black" FontSize="25" FontAttributes="Bold" Padding="23" HorizontalOptions="Center" />

                    <Grid ColumnSpacing="15" RowSpacing="15" Padding="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Tecnologia -->
                        <Frame Grid.Row="0" Grid.Column="0" CornerRadius="20" Padding="0" HasShadow="False" HeightRequest="93" WidthRequest="155" IsClippedToBounds="True" BorderColor="Black">
                            <Grid>
                                <Image Source="prestadortecnologia.png" Aspect="AspectFill" HeightRequest="93" WidthRequest="155">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding PrestadorTecnologiaCommand}" />
                                    </Image.GestureRecognizers>
                                </Image>
                                <BoxView BackgroundColor="#00000066" HeightRequest="40" VerticalOptions="Start" />
                                <Label Text="Tecnologia" TextColor="White" FontAttributes="Bold" FontSize="15" HorizontalOptions="Center" VerticalOptions="Start" Margin="0,10" />
                            </Grid>
                        </Frame>

                        <!-- Construção -->
                        <Frame Grid.Row="0" Grid.Column="1" CornerRadius="20" Padding="0" HasShadow="False" HeightRequest="93" WidthRequest="155" IsClippedToBounds="True" BorderColor="Black">
                            <Grid>
                                <Image Source="prestadorconstrucao.png" Aspect="AspectFill" HeightRequest="93" WidthRequest="155">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding PrestadorConstrucaoCommand}" />
                                    </Image.GestureRecognizers>
                                </Image>
                                <BoxView BackgroundColor="#00000066" HeightRequest="40" VerticalOptions="Start" />
                                <Label Text="Construção" TextColor="White" FontAttributes="Bold" FontSize="15" HorizontalOptions="Center" VerticalOptions="Start" Margin="0,10" />
                            </Grid>
                        </Frame>

                        <!-- Limpeza -->
                        <Frame Grid.Row="1" Grid.Column="0" CornerRadius="20" Padding="0" HasShadow="False" HeightRequest="93" WidthRequest="155" IsClippedToBounds="True" BorderColor="Black">
                            <Grid>
                                <Image Source="prestadorlimpeza.png" Aspect="AspectFill" HeightRequest="93" WidthRequest="155">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding PrestadorLimpezaCommand}" />
                                    </Image.GestureRecognizers>
                                </Image>
                                <BoxView BackgroundColor="#00000066" HeightRequest="40" VerticalOptions="Start" />
                                <Label Text="Limpeza" TextColor="White" FontAttributes="Bold" FontSize="15" HorizontalOptions="Center" VerticalOptions="Start" Margin="0,10" />
                            </Grid>
                        </Frame>

                        <!-- Marketing -->
                        <Frame Grid.Row="1" Grid.Column="1" CornerRadius="20" Padding="0" HasShadow="False" HeightRequest="93" WidthRequest="155" IsClippedToBounds="True" BorderColor="Black">
                            <Grid>
                                <Image Source="marketing.png" Aspect="AspectFill" HeightRequest="93" WidthRequest="155">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding PrestadorMarketingCommand}" />
                                    </Image.GestureRecognizers>
                                </Image>
                                <BoxView BackgroundColor="#00000066" HeightRequest="40" VerticalOptions="Start" />
                                <Label Text="Marketing" TextColor="White" FontAttributes="Bold" FontSize="15" HorizontalOptions="Center" VerticalOptions="Start" Margin="0,10" />
                            </Grid>
                        </Frame>

                        <!-- Jardinagem -->
                        <Frame Grid.Row="2" Grid.Column="0" CornerRadius="20" Padding="0" HasShadow="False" HeightRequest="93" WidthRequest="155" IsClippedToBounds="True" BorderColor="Black">
                            <Grid>
                                <Image Source="prestadorjardinagem.png" Aspect="AspectFill" HeightRequest="93" WidthRequest="155">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding PrestadorJardinagemCommand}" />
                                    </Image.GestureRecognizers>
                                </Image>
                                <BoxView BackgroundColor="#00000066" HeightRequest="40" VerticalOptions="Start" />
                                <Label Text="Jardinagem" TextColor="White" FontAttributes="Bold" FontSize="15" HorizontalOptions="Center" VerticalOptions="Start" Margin="0,10" />
                            </Grid>
                        </Frame>

                        <!-- Estética -->
                        <Frame Grid.Row="2" Grid.Column="1" CornerRadius="20" Padding="0" HasShadow="False" HeightRequest="93" WidthRequest="155" IsClippedToBounds="True" BorderColor="Black">
                            <Grid>
                                <Image Source="estetica.png" Aspect="AspectFill" HeightRequest="93" WidthRequest="155">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding PrestadorEsteticaCommand}" />
                                    </Image.GestureRecognizers>
                                </Image>
                                <BoxView BackgroundColor="#00000066" HeightRequest="40" VerticalOptions="Start" />
                                <Label Text="Estética" TextColor="White" FontAttributes="Bold" FontSize="15" HorizontalOptions="Center" VerticalOptions="Start" Margin="0,10" />
                            </Grid>
                        </Frame>

                        <!-- Refrigeração -->
                        <Frame Grid.Row="3" Grid.Column="0" CornerRadius="20" Padding="0" HasShadow="False" HeightRequest="93" WidthRequest="155" IsClippedToBounds="True" BorderColor="Black">
                            <Grid>
                                <Image Source="refrigeracao.png" Aspect="AspectFill" HeightRequest="93" WidthRequest="155">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding PrestadorRefrigeracaoCommand}" />
                                    </Image.GestureRecognizers>
                                </Image>
                                <BoxView BackgroundColor="#00000066" HeightRequest="40" VerticalOptions="Start" />
                                <Label Text="Refrigeração" TextColor="White" FontAttributes="Bold" FontSize="15" HorizontalOptions="Center" VerticalOptions="Start" Margin="0,10" />
                            </Grid>
                        </Frame>

                        <!-- Elétrica -->
                        <Frame Grid.Row="3" Grid.Column="1" CornerRadius="20" Padding="0" HasShadow="False" HeightRequest="93" WidthRequest="155" IsClippedToBounds="True" BorderColor="Black">
                            <Grid>
                                <Image Source="eletrica.png" Aspect="AspectFill" HeightRequest="93" WidthRequest="155">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding PrestadorEletricaCommand}" />
                                    </Image.GestureRecognizers>
                                </Image>
                                <BoxView BackgroundColor="#00000066" HeightRequest="40" VerticalOptions="Start" />
                                <Label Text="Elétrica" TextColor="White" FontAttributes="Bold" FontSize="15" HorizontalOptions="Center" VerticalOptions="Start" Margin="0,10" />
                            </Grid>
                        </Frame>

                        <!-- Outros -->
                        <Frame Grid.Row="4" Grid.ColumnSpan="2" HorizontalOptions="Center" CornerRadius="20" Padding="0" HasShadow="False" HeightRequest="93" WidthRequest="320" IsClippedToBounds="True" BorderColor="Black">
                            <Grid>
                                <Image Source="outros.png" Aspect="AspectFill" HeightRequest="93" WidthRequest="320">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding PrestadorOutrosCommand}" />
                                    </Image.GestureRecognizers>
                                </Image>
                                <BoxView BackgroundColor="#00000066" HeightRequest="40" VerticalOptions="Start" />
                                <Label Text="Outros" TextColor="White" FontAttributes="Bold" FontSize="15" HorizontalOptions="Center" VerticalOptions="Start" Margin="0,10" />
                            </Grid>
                        </Frame>
                    </Grid>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>