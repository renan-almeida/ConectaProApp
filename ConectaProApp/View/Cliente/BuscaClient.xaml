<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConectaProApp.View.Cliente.BuscaClient"
             BackgroundColor="#f1f1f1">
    <ScrollView>
        <Grid RowDefinitions="Auto, *">
            <!-- Cabeçalho Azul -->
            <Grid VerticalOptions="Start" BackgroundColor="#020202" HeightRequest="58" Padding="10" RowSpacing="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Logo ConectaPro -->
                <Image Source="conectapro_logo.png"
                       HeightRequest="40"
                       VerticalOptions="Center"
                       Grid.Column="0"/>  

                <!-- Espaço vazio no meio, ou poderia usar um Label centralizado se quiser -->
           

                <!-- Foto da Empresa logada -->
                <Frame HeightRequest="40" WidthRequest="40"
                     CornerRadius="20"
                     HasShadow="False"
                     Padding="0"
                     BackgroundColor="White"
                     BorderColor="#0f5cc2"
                     VerticalOptions="Center"
                     HorizontalOptions="End"
                     Grid.Column="2">
                    <Image Source="{Binding FotoEmpresaUrl}" 
                         Aspect="AspectFill" 
                         HeightRequest="40" WidthRequest="40"
                         >  
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnFotoEmpresaClicked"/>
                        </Image.GestureRecognizers>
                        <Image.Clip>
                            <EllipseGeometry 
                          Center="20,20"
                          RadiusX="20"
                          RadiusY="20"/>
                        </Image.Clip>
                    </Image>
                </Frame>
            </Grid>
            
            <VerticalStackLayout>
          
                <!-- Logo -->
                <!-- <Image Source="logo_conectapro_preto.png" HeightRequest="100" WidthRequest="100" /> -->

            <HorizontalStackLayout>
                <!-- Barra de Pesquisa -->
                <Frame 
                    Padding="0"
                    Margin="16,100,0,20"
                    BackgroundColor="White"
                    CornerRadius="15"
                    BorderColor="#0F5CC2"
                    HasShadow="False"
                    HeightRequest="44"
                    WidthRequest="300">

                    <Grid ColumnDefinitions="Auto, *" VerticalOptions="Center">
                        <!-- Ícone de lupa -->
                        <Image 
                            Source="lupabusca.png" 
                            HeightRequest="16"
                            WidthRequest="16"
                            Margin="10,0"
                            VerticalOptions="Center"
                            HorizontalOptions="Start" />

                        <!-- Campo de texto -->
                        <Entry 
                            Grid.Column="1"
                            Placeholder="Busque suas solicitações"
                            Text="{Binding TermoDigitado, Mode=TwoWay}"
                            FontSize="16"
                            WidthRequest="300"
                            HeightRequest="44"
                            BackgroundColor="Transparent"
                            VerticalOptions="Center"
                            HorizontalOptions="FillAndExpand"
                            TextColor="Black"
                            PlaceholderColor="Gray"
                            Margin="0"/>
                    </Grid>
                </Frame>

                <Button
                    x:Name="AcionarBusca"
                    Text="➤" FontSize="18" CornerRadius="100"
                    HeightRequest="30"
                    WidthRequest="30"
                    BackgroundColor="#0f5cc2"
                    Command="{Binding AcionarBuscaCommand}"
                    Margin="15,100,0,20"/>
            </HorizontalStackLayout>

            <!-- Categorias -->
                <Frame 
                Padding="0"
                Margin="10"
                BackgroundColor="White"
                CornerRadius="15"
                HasShadow="False"
                HeightRequest="800"
                HorizontalOptions="Center"
                WidthRequest="413">

                    <VerticalStackLayout>
                        <Label Text="Categorias"
                           TextColor="Black"
                           FontSize="25"
                           FontAttributes="Bold"
                           Padding="23"/>

                        <FlexLayout 
                            Wrap="Wrap"
                            Direction="Row"
                            JustifyContent="Start"
                            AlignItems="Start"
                            AlignContent="Start"
                            Margin="10">

                            <!-- Tecnologia -->
                            <Frame
                            CornerRadius="20"
                            Padding="0"
                            HasShadow="False"
                            HeightRequest="93"
                            WidthRequest="160"
                            Margin="4,0,25,0"
                            IsClippedToBounds="True"
                            BorderColor="Transparent">

                                <Grid>
                                    <Image 
                                    Source="prestadortecnologia.png" 
                                    Aspect="AspectFill"
                                    HeightRequest="93"
                                    WidthRequest="170" >
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding PrestadorTecnologiaCommand}"/>
                                        </Image.GestureRecognizers>
                                    </Image>
                                    <BoxView 
                                    BackgroundColor="#00000066" 
                                    HeightRequest="40"/>
                                    <Label 
                                    Text="Tecnologia"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    FontSize="15"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Start"
                                    Margin="0,10"
                                    Padding="4,0,70,0"/>
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer 
                                        Command="{Binding PrestadorTecnologiaCommand}" 
                                        CommandParameter="TECNOLOGIA" />
                                    </Grid.GestureRecognizers>
                                </Grid>
                            </Frame>

                            <!-- Construção  -->
                            <Frame
                            CornerRadius="20"
                            Padding="0"
                            HasShadow="False"
                            HeightRequest="93"
                            WidthRequest="160"
                            Margin="0,0,0,25"
                            IsClippedToBounds="True"
                            BorderColor="Transparent">

                                <Grid>
                                    <Image 
                                Source="prestadorconstrucao.png" 
                                Aspect="AspectFill"
                                HeightRequest="93"
                                WidthRequest="170" >
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding PrestadorConstrucaoCommand}"/>
                                        </Image.GestureRecognizers>
                                    </Image>
                                    <BoxView 
                                    BackgroundColor="#00000066" 
                                    HeightRequest="40"/>
                                    <Label 
                                    Text="Construção"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    FontSize="15"
                                    HorizontalOptions="Start"
                                    VerticalOptions="Start"
                                    Margin="0,10"
                                    Padding="10,1,20,20"
                        />
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer 
                                        Command="{Binding PrestadorConstrucaoCommand}" 
                                        CommandParameter="CONTRUCAO" />
                                    </Grid.GestureRecognizers>
                                </Grid>
                            </Frame>

                            <!-- Limpeza -->
                            <Frame
                            CornerRadius="20"
                            Padding="0"
                            HasShadow="False"
                            HeightRequest="93"
                            WidthRequest="160"
                            Margin="4,0,25,0"
                            IsClippedToBounds="True"
                            BorderColor="Transparent">

                                <Grid>
                                    <Image 
                                    Source="prestadorlimpeza.png" 
                                    Aspect="AspectFill"
                                    HeightRequest="93"
                                    WidthRequest="170" >
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding PrestadorLimpezaCommand}"/>
                                        </Image.GestureRecognizers>
                                    </Image>
                                    <BoxView 
                                    BackgroundColor="#00000066" 
                                    HeightRequest="40"/>
                                    <Label 
                                    Text="Limpeza"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    FontSize="15"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Start"
                                    Margin="0,10"
                                    Padding="4,0,90,0"/>
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer 
                                    Command="{Binding PrestadorLimpezaCommand}" 
                                    CommandParameter="LIMPEZA" />
                                    </Grid.GestureRecognizers>
                                </Grid>
                            </Frame>

                            <!-- Marketing -->
                            <Frame
                            CornerRadius="20"
                            Padding="0"
                            HasShadow="False"
                            HeightRequest="93"
                            WidthRequest="160"
                            Margin="0,0,0,25"
                            IsClippedToBounds="True"
                            BorderColor="Transparent">

                                <Grid>
                                    <Image 
                                    Source="marketing.jpg" 
                                    Aspect="AspectFill"
                                    HeightRequest="93"
                                    WidthRequest="170" >
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding PrestadorMarketingCommand}"/>
                                        </Image.GestureRecognizers>
                                    </Image>
                                    <BoxView 
                                    BackgroundColor="#00000066" 
                                    VerticalOptions="End"
                                    HeightRequest="40"/>
                                    <Label 
                                    Text="Marketing"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    FontSize="15"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Start"
                                    Margin="4,10,80,0"/>
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer 
                                        Command="{Binding PrestadorMarketingCommand}" 
                                        CommandParameter="MARKETING" />
                                    </Grid.GestureRecognizers>
                                </Grid>
                            </Frame>

                            <!-- Jardinagem -->
                            <Frame
                            CornerRadius="20"
                            Padding="0"
                            HasShadow="False"
                            HeightRequest="93"
                            WidthRequest="160"
                            Margin="4,0,25,0"
                            IsClippedToBounds="True"
                            BorderColor="Transparent">

                                <Grid>
                                    <Image 
                                    Source="prestadorjardinagem.png" 
                                    Aspect="AspectFill"
                                    HeightRequest="93"
                                    WidthRequest="170" >
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding PrestadorJardinagemCommand}"/>
                                        </Image.GestureRecognizers>
                                    </Image>
                                    <BoxView 
                                    BackgroundColor="#00000066" 
                                    VerticalOptions="End"
                                    HeightRequest="40"/>
                                    <Label 
                                    Text="Jardinagem"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    FontSize="15"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Start"
                                    Margin="4,10"
                                     Padding="0,0,60,0"/>

                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer 
                                        Command="{Binding PrestadorJardinagemCommand}" 
                                        CommandParameter="JARDINAGEM" />
                                    </Grid.GestureRecognizers>
                                </Grid>
                            </Frame>

                            <!-- Estética -->
                            <Frame
                             CornerRadius="20"
                             Padding="0"
                             HasShadow="False"
                             HeightRequest="93"
                             WidthRequest="160"
                             Margin="0,0,0,25"
                             IsClippedToBounds="True"
                             BorderColor="Transparent">

                                <Grid>
                                    <Image 
                                    Source="estetica.jpg" 
                                    Aspect="AspectFill"
                                    HeightRequest="93"
                                    WidthRequest="170" >
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding PrestadorEsteticaCommand}"/>
                                        </Image.GestureRecognizers>
                                    </Image>
                                    <BoxView 
                                    BackgroundColor="#00000066" 
                                    VerticalOptions="End"
                                    HeightRequest="40"/>
                                    <Label 
                                    Text="Estetica"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    FontSize="15"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Start"
                                    Margin="2,10,70,0"/>

                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer 
                                        Command="{Binding PrestadorEsteticaCommand}" 
                                        CommandParameter="ESTETICA" />
                                    </Grid.GestureRecognizers>
                                </Grid>
                            </Frame>


                            <!-- Refrigeração -->
                            <Frame
                            CornerRadius="20"
                            Padding="0"
                            HasShadow="False"
                            HeightRequest="93"
                            WidthRequest="160"
                            Margin="4,0,25,0"
                            IsClippedToBounds="True"
                            BorderColor="Transparent">

                                <Grid>

                                    <Image 
                                  Source="refrigeracao.png" 
                                  Aspect="AspectFill"
                                  HeightRequest="93"
                                  WidthRequest="170" >
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding PrestadorRefrigeracaoCommand}"/>
                                        </Image.GestureRecognizers>
                                    </Image>

                                    <BoxView 
                                      BackgroundColor="#00000066" 
                                      VerticalOptions="End"
                                      HeightRequest="40"/>

                                    <Label 
                                    Text="Refrigeração"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    FontSize="15"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Start"
                                    Margin="4,10"
                                     Padding="0,0,90,0"/>

                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer 
                                        Command="{Binding PrestadorRefrigeracaoCommand}" 
                                        CommandParameter="REFRIGERAÇÃO" />
                                    </Grid.GestureRecognizers>
                                </Grid>
                            </Frame>

                            <!-- Elétrica -->
                            <Frame CornerRadius="20"
                                Padding="0"
                                HasShadow="False"
                                HeightRequest="93"
                                WidthRequest="160"
                                Margin="0,0,0,25"
                                IsClippedToBounds="True"
                                BorderColor="Transparent">

                                <Grid>
                                    <Image Source="eletrica.jpeg"
                                       Aspect="AspectFill"
                                       HeightRequest="93"
                                       WidthRequest="170">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding PrestadorEletricaCommand}"/>
                                        </Image.GestureRecognizers>
                                    </Image>
                                    <BoxView 
                                    BackgroundColor="#00000066" 
                                    VerticalOptions="End"
                                    HeightRequest="40"/>
                                    <Label Text="Elétrica"
                                       TextColor="White"
                                       FontAttributes="Bold"
                                       FontSize="15"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Start"
                                       Margin="0,10,65,0"/>

                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer 
                                        Command="{Binding PrestadorEletricaCommand}"
                                        CommandParameter="ELETRICA"/>
                                    </Grid.GestureRecognizers>
                                </Grid>
                            </Frame>
                            
                            <!-- DESIGN -->
                            <Frame
                                CornerRadius="20"
                                Padding="0"
                                HasShadow="False"
                                HeightRequest="93"
                                WidthRequest="160"
                                Margin="4,0,25,0"
                                IsClippedToBounds="True"
                                BorderColor="Transparent">

                                <Grid>

                                    <Image 
                                          Source="design.jpg" 
                                          Aspect="AspectFill"
                                          HeightRequest="93"
                                          WidthRequest="170" >
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding PrestadorDesignCommand}"/>
                                        </Image.GestureRecognizers>
                                    </Image>

                                        <BoxView 
                                          BackgroundColor="#00000066" 
                                          VerticalOptions="End"
                                          HeightRequest="40"/>

                                    <Label 
                                        Text="Refrigeração"
                                        TextColor="White"
                                        FontAttributes="Bold"
                                        FontSize="15"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Start"
                                        Margin="4,10"
                                         Padding="0,0,90,0"/>

                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer 
                                            Command="{Binding PrestadorDesignCommand}" 
                                            CommandParameter="REFRIGERAÇÃO" />
                                    </Grid.GestureRecognizers>
                                </Grid>
                            </Frame>

                            <!-- Outros -->
                            <Frame  CornerRadius="20"
                                     Padding="0"
                                     HasShadow="False"
                                     HeightRequest="93"
                                     WidthRequest="160"
                                     Margin="0,0,0,25"
                                     IsClippedToBounds="True"
                                     BorderColor="Transparent">

                                <Grid>
                                    <Image Source="outros.jpg"
                                            Aspect="AspectFill"
                                            HeightRequest="93"
                                            WidthRequest="170">
                                    </Image>
                                    <BoxView 
                                         BackgroundColor="#00000066" 
                                         VerticalOptions="End"
                                         HeightRequest="40"/>
                                    <Label Text="Outros"
                                            TextColor="White"
                                            FontAttributes="Bold"
                                            FontSize="15"
                                            HorizontalOptions="Center"
                                            VerticalOptions="Start"
                                            Margin="0,10,65,0"/>

                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer 
                                             Command="{Binding PrestadorOutrosCommand}"/>
                                    </Grid.GestureRecognizers>
                                </Grid>
                            </Frame>


                        </FlexLayout>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>
