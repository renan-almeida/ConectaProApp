<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConectaProApp.View.Cliente.CriarSolicitacaoViews.CriarSolicitacaoClientTwo"
             xmlns:sys="clr-namespace:System;assembly=netstandard"
             BackgroundColor="#f1f1f1">
    <ScrollView>
        <Grid RowDefinitions="Auto, *">
            <!-- Cabeçalho Azul -->
            <Grid Grid.Row="0" VerticalOptions="Start" BackgroundColor="#020202" HeightRequest="58" Padding="10" RowSpacing="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Logo ConectaPro -->
                <Image  Source="iconevoltar.png"
                        HeightRequest="30"
                        WidthRequest="30"
                        VerticalOptions="Center"
                        Grid.Column="0">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnVoltarClicked" />
                    </Image.GestureRecognizers>
                </Image>

                <!-- Espaço vazio no meio, ou poderia usar um Label centralizado se quiser -->

                <!-- Foto da Empresa logada -->
                <Frame   HeightRequest="40"
                         WidthRequest="40"
                         CornerRadius="20"
                         HasShadow="False"
                         Padding="0"
                         BackgroundColor="White"
                         BorderColor="#0f5cc2"
                         VerticalOptions="Center"
                         HorizontalOptions="End"
                         Grid.Column="2">
                    <Image Source="{Binding FotoEmpresaUrl, Mode=OneWay}" 
                 Aspect="AspectFill" 
                 HeightRequest="40" WidthRequest="40"
                 >
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnFotoEmpresaClicked"/>
                        </Image.GestureRecognizers>
                        <Image.Clip>
                            <EllipseGeometry 
                              Center="20,20"
                              RadiusX="20"
                              RadiusY="20"/>
                        </Image.Clip>
                    </Image>
                </Frame>
            </Grid>

            <VerticalStackLayout Grid.Row="1">
                <Image 
                Source="logo_conectapro_preto.png" 
                HeightRequest="150" 
                WidthRequest="150"
                HorizontalOptions="Center"/>

                <Label Text="Nos de mais algumas"
                   TextColor="Black"
                   FontSize="20"
                   HorizontalOptions="Center"/>
                <Label Text="informações."
                   TextColor="Black"
                   FontSize="20"
                   HorizontalOptions="Center"
                   />

                <Frame BackgroundColor="White"
                   WidthRequest="361"
                   HeightRequest="420"
                   Margin="16"
                   CornerRadius="30"
                   BorderColor="Black">

                    <VerticalStackLayout Spacing="28" Padding="36">


                        <Label Text="Estipule a previsão para o ínicio do serviço"
                               FontSize="15"
                               TextColor="Gray" />
                        <DatePicker 
                                x:Name="pickerPrevisaoInicio"
                                Format="dd/MM/yyyy"
                                WidthRequest="314"
                                HeightRequest="0"
                                BackgroundColor="White"
                               Date="{Binding PrevisaoInicio, Mode=TwoWay}"/>
                           
                        <Entry Placeholder="Estipule a duração em dias do serviço"
                               Keyboard="Numeric"
                           PlaceholderColor="Gray"
                           WidthRequest="314"
                           HeightRequest="0"
                               Text="{Binding duracaoServico, Mode=TwoWay}"
                               MaxLength="2"
                                            />
                    </VerticalStackLayout>
                </Frame>
                <Button Text="Próximo"
                    WidthRequest="240"
                    HeightRequest="50"
                    CornerRadius="15"
                    BackgroundColor="#0f5cc2"
                    BorderColor="Black"
                    BorderWidth="1"
                    FontSize="28"
                    Command="{Binding EtapaFinalCommand}"/>

            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>