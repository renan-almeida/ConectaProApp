<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConectaProApp.View.Cliente.RegisterClientFinal"
             BackgroundImageSource="fundobranco.jpg">
    <ScrollView>
        <VerticalStackLayout
        Padding="30,0"
        Spacing="25">

             <Image
            Source="logo_conectapro_preto.png"
            HeightRequest="100"
            Aspect="AspectFit"
            HorizontalOptions="Center"
                 Margin="63"/>
            
            <Label
            TextColor="Black"
            Text="4. Para finalizar"
            FontSize="24"
            HorizontalOptions="Center" />

            <Label
            Text="Crie uma senha"
            TextColor="#B2A9A9"
            FontSize="14"
            HorizontalOptions="Center" />

            <Entry
            TextColor="Black"
            Placeholder="Digitar senha"
            PlaceholderColor="#B2A9A9"
            FontSize="15"
            HorizontalOptions="Fill" 
            WidthRequest="314"
            IsPassword="True"
            Text="{Binding Senha, Mode=TwoWay}"/> 

            <Entry
            TextColor="Black"
            Placeholder="Confirmar senha"
            PlaceholderColor="#B2A9A9"
            FontSize="15"
            IsPassword="True"
            WidthRequest="314"
            HorizontalOptions="Fill"
               />

            <Button
            Text="Criar conta"
            FontSize="25"
            BackgroundColor="#0f5cc2"
                BorderColor="Black"
                BorderWidth="1"
                CornerRadius="10"
            TextColor="White"
            HeightRequest="48"
            WidthRequest="178"
            HorizontalOptions="Fill"
            />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>