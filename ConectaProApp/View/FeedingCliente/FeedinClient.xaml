<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ConectaProApp.ViewModels.FeedingCliente"
             x:Class="ConectaProApp.View.FeedingCliente.FeedinClient"
             Title="FeedinClient">
    
    <ContentPage.BindingContext>
        <vm:FeedingClient />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <CollectionView ItemsSource="{Binding Prestadores}"
                     VerticalScrollBarVisibility="Never"
                     RemainingItemsThreshold="2"
                     RemainingItemsThresholdReachedCommand="{Binding LoadMoreCommand}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="10" Padding="15" CornerRadius="10" BorderColor="Gray">
                        <StackLayout>
                            <Label Text="{Binding DescPrestador}" FontSize="18" FontAttributes="Bold" />
                            <Label Text="Segmentos:" FontSize="14" FontAttributes="Bold" />
                            <Label Text="{Binding Segmento}" FontSize="14" />
                            <Label Text="Especializações:" FontSize="14" FontAttributes="Bold" />
                            <Label Text="{Binding Especialização}" FontSize="14" />
                            <Label Text="Status:" FontSize="14" FontAttributes="Bold" />
                            <Label Text="{Binding StatusDisponibilidade}" FontSize="14" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ContentPage.Content>
</ContentPage>