<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConectaProApp.View.Prestador.BuscaPrestador"
             BackgroundColor="#f3f3f3">
    <ScrollView>
        
    
    <VerticalStackLayout>
        <!-- Logo -->
        <Image Source="logo_conectapro_preto.png" HeightRequest="100" WidthRequest="100" />

        <!-- Barra de Pesquisa -->
        <Frame 
            Padding="0"
            Margin="10"
            BackgroundColor="White"
            CornerRadius="15"
            BorderColor="#0F5CC2"
            HasShadow="False"
            HeightRequest="44"
            HorizontalOptions="Center"
            WidthRequest="375">

            <Grid ColumnDefinitions="Auto, *" VerticalOptions="Center">
                <!-- Ícone de lupa -->
                <Image 
                    Source="lupabusca.png" 
                    HeightRequest="16"
                    WidthRequest="16"
                    Margin="10,0"
                    VerticalOptions="Center"
                    HorizontalOptions="Start" />

                <!-- Campo de texto -->
                <Entry 
                    Grid.Column="1"
                    Placeholder="Busque suas solicitações"
                    FontSize="16"
                    WidthRequest="375"
                    HeightRequest="44"
                    BackgroundColor="White"
                    VerticalOptions="Center"
                    TextColor="Black"
                    PlaceholderColor="Gray"
                    Margin="5,0"
                />
            </Grid>
        </Frame>

        <!-- Categorias -->
<Frame 
    Padding="0"
    Margin="10"
    BackgroundColor="White"
    CornerRadius="15"
    HasShadow="False"
    HeightRequest="614"
    HorizontalOptions="Center"
    WidthRequest="413">

    <VerticalStackLayout>
        <Label Text="Categorias"
               TextColor="Black"
               FontSize="25"
               FontAttributes="Bold"
               Padding="23"/>

        <FlexLayout 
            Wrap="Wrap"
            Direction="Row"
            JustifyContent="Start"
            AlignItems="Start"
            AlignContent="Start"
            Margin="10">

            <!-- Tecnologia -->
            <Frame
                CornerRadius="20"
                Padding="0"
                HasShadow="False"
                HeightRequest="93"
                WidthRequest="170"
                Margin="0,0,25,25"
                IsClippedToBounds="True"
                BorderColor="Transparent">

                <Grid>
                    <Image 
                        Source="construcao.png" 
                        Aspect="AspectFill"
                        HeightRequest="93"
                        WidthRequest="170" />
                    <BoxView 
                        BackgroundColor="#00000066" 
                        HeightRequest="40"/>
                    <Label 
                        Text="Tecnologia"
                        TextColor="White"
                        FontAttributes="Bold"
                        FontSize="15"
                        HorizontalOptions="Center"
                        VerticalOptions="Start"
                        Margin="0,10"
                        Padding="0,0,70,0"/>
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer 
                            Command="{Binding TecnologiaSolicitacoesCommand}" 
                            CommandParameter="Tecnologia" />
                    </Grid.GestureRecognizers>
                </Grid>
            </Frame>

            <!-- Construção  -->
            <Frame
                CornerRadius="20"
                Padding="0"
                HasShadow="False"
                HeightRequest="93"
                WidthRequest="170"
                Margin="0,0,0,25"
                IsClippedToBounds="True"
                BorderColor="Transparent">

                <Grid>
                    <Image 
                        Source="construcao.png" 
                        Aspect="AspectFill"
                        HeightRequest="93"
                        WidthRequest="170" />
                    <BoxView 
                        BackgroundColor="#00000066" 
                        HeightRequest="40"/>
                    <Label 
                        Text="Construção"
                        TextColor="White"
                        FontAttributes="Bold"
                        FontSize="15"
                        HorizontalOptions="Start"
                        VerticalOptions="Start"
                        Margin="0,10"
                        Padding="20,20,20,20"
                        />
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer 
                            Command="{Binding ConstrucaoSolicitacoesCommand}" 
                            CommandParameter="Construcao" />
                    </Grid.GestureRecognizers>
                </Grid>
            </Frame>

            <!-- Limpeza -->
            <Frame
                CornerRadius="20"
                Padding="0"
                HasShadow="False"
                HeightRequest="93"
                WidthRequest="170"
                Margin="0,0,25,0"
                IsClippedToBounds="True"
                BorderColor="Transparent">

                <Grid>
                    <Image 
                        Source="limpeza.png" 
                        Aspect="AspectFill"
                        HeightRequest="93"
                        WidthRequest="170" />
                    <BoxView 
                        BackgroundColor="#00000066" 
                        HeightRequest="40"/>
                    <Label 
                        Text="Limpeza"
                        TextColor="White"
                        FontAttributes="Bold"
                        FontSize="15"
                        HorizontalOptions="Center"
                        VerticalOptions="Start"
                        Margin="0,10"
                        Padding="0,0,90,0"/>
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer 
                            Command="{Binding LimpezaSolicitacoesCommand}" 
                            CommandParameter="Limpeza" />
                    </Grid.GestureRecognizers>
                </Grid>
            </Frame>

          <!-- Reparos -->
        <Frame
            CornerRadius="20"
            Padding="0"
            HasShadow="False"
            HeightRequest="93"
            WidthRequest="170"
            Margin="0,0,0,25"
            IsClippedToBounds="True"
            BorderColor="Transparent">  

          <Grid>
             <Image 
                Source="reparos.png" 
                Aspect="AspectFill"
                HeightRequest="93"
                WidthRequest="170" />
                                <BoxView 
            BackgroundColor="#00000066" 
            VerticalOptions="End"
            HeightRequest="40"/>
              <Label 
            Text="Reparos"
            TextColor="White"
            FontAttributes="Bold"
            FontSize="15"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            Margin="0,10"
                  Padding="0,0,90,0"/>
               <Grid.GestureRecognizers>
                  <TapGestureRecognizer 
                        Command="{Binding ReparosSolicitacoesCommand}" 
                        CommandParameter="Reparos" />
               </Grid.GestureRecognizers>
            </Grid>
           </Frame>
            
                        <!-- Jardinagem -->
           <Frame
                CornerRadius="20"
                Padding="0"
                HasShadow="False"
                HeightRequest="93"
                WidthRequest="170"
                Margin="0,0,25,0"
                IsClippedToBounds="True"
                BorderColor="Transparent">      

            <Grid>
               <Image 
                Source="jardinagem.png" 
                Aspect="AspectFill"
                HeightRequest="93"
                WidthRequest="170" />
               <BoxView 
                BackgroundColor="#00000066" 
                VerticalOptions="End"
                HeightRequest="40"/>
                 <Label 
                    Text="Jardinagem"
                    TextColor="White"
                    FontAttributes="Bold"
                    FontSize="15"
                    HorizontalOptions="Center"
                    VerticalOptions="Start"
                    Margin="0,10"
                     Padding="0,0,60,0"/>
                
                <Grid.GestureRecognizers>
               <TapGestureRecognizer 
                Command="{Binding JardinagemSolicitacoesCommand}" 
                CommandParameter="Jardinagem" />
                  </Grid.GestureRecognizers>
               </Grid>
           </Frame>

        </FlexLayout>
    </VerticalStackLayout>
</Frame>

    </VerticalStackLayout>
        
    </ScrollView>
</ContentPage>
