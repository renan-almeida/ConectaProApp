<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConectaProApp.View.Prestador.BuscaPrestador"
             BackgroundColor="#f3f3f3">
    <ScrollView>
        
    
    <VerticalStackLayout>
        <!-- Logo -->
        <Image Source="logo_conectapro_preto.png" HeightRequest="100" WidthRequest="100" />

            <HorizontalStackLayout>
        <!-- Barra de Pesquisa -->
        <Frame 
            Padding="0"
            Margin="25,0,0,20"
            BackgroundColor="White"
            CornerRadius="15"
            BorderColor="#0F5CC2"
            HasShadow="False"
            HeightRequest="44"
            WidthRequest="320">

            <Grid ColumnDefinitions="Auto, *" VerticalOptions="Center">
                <!-- Ícone de lupa -->
                <Image 
                    Source="lupabusca.png" 
                    HeightRequest="16"
                    WidthRequest="16"
                    Margin="10,0"
                    VerticalOptions="Center"
                    HorizontalOptions="Start" />

                <!-- Campo de texto -->
                <Entry 
                    Grid.Column="1"
                    Placeholder="Busque suas solicitações"
                    Text="{Binding TermoBusca, Mode=TwoWay}"
                    FontSize="16"
                    WidthRequest="300"
                    HeightRequest="44"
                    BackgroundColor="Transparent"
                    VerticalOptions="Center"
                    HorizontalOptions="FillAndExpand"
                    TextColor="Black"
                    PlaceholderColor="Gray"
                    Margin="0"
                />
            </Grid>
        </Frame>
        
        <Button
            Command="{Binding AcionarBuscaCommand}"
            Text="➤" FontSize="18" CornerRadius="100"
            HeightRequest="30"
            WidthRequest="30"
            BackgroundColor="#0f5cc2"
            Margin="15,0,0,20"/>
            </HorizontalStackLayout>

            <!-- Categorias -->
<Frame 
    Padding="0"
    Margin="10"
    BackgroundColor="White"
    CornerRadius="15"
    HasShadow="False"
    HeightRequest="614"
    HorizontalOptions="Center"
    WidthRequest="413">

    <VerticalStackLayout>
        <Label Text="Categorias"
               TextColor="Black"
               FontSize="25"
               FontAttributes="Bold"
               Padding="23"/>

        <FlexLayout 
            Wrap="Wrap"
            Direction="Row"
            JustifyContent="Start"
            AlignItems="Start"
            AlignContent="Start"
            Margin="10">

            <!-- Tecnologia -->
                        <Frame
                            CornerRadius="20"
                            Padding="0"
                            HasShadow="False"
                            HeightRequest="93"
                            WidthRequest="170"
                            Margin="0,0,25,25"
                            IsClippedToBounds="True"
                            BorderColor="Transparent">
                            <Grid>
                                <Image 
                                    Source="tecnologia.png" 
                                    Aspect="AspectFill"
                                    HeightRequest="93"
                                    WidthRequest="170">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding TecnologiaSolicitacoesCommand}" />
                                    </Image.GestureRecognizers>
                                </Image>
                                <BoxView 
                                    BackgroundColor="#00000066" 
                                    HeightRequest="40"/>
                                <Label 
                                    Text="Tecnologia"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    FontSize="15"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Start"
                                    Margin="0,10"
                                    Padding="0,0,70,0"/>
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer 
                                        Command="{Binding TecnologiaSolicitacoesCommand}" 
                                        CommandParameter="Tecnologia" />
                                </Grid.GestureRecognizers>
                            </Grid>
                        </Frame>

                        <!-- Construção -->
                        <Frame
                            CornerRadius="20"
                            Padding="0"
                            HasShadow="False"
                            HeightRequest="93"
                            WidthRequest="170"
                            Margin="0,0,0,25"
                            IsClippedToBounds="True"
                            BorderColor="Transparent">
                            <Grid>
                                <Image 
                                    Source="construcao.png" 
                                    Aspect="AspectFill"
                                    HeightRequest="93"
                                    WidthRequest="170">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding ConstrucaoSolicitacoesCommand}" />
                                    </Image.GestureRecognizers>
                                </Image>
                                <BoxView 
                                    BackgroundColor="#00000066" 
                                    HeightRequest="40"/>
                                <Label 
                                    Text="Construção"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    FontSize="15"
                                    HorizontalOptions="Start"
                                    VerticalOptions="Start"
                                    Margin="0,10"
                                    Padding="10,2"/>
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer 
                                        Command="{Binding ConstrucaoSolicitacoesCommand}" 
                                        CommandParameter="Construcao" />
                                </Grid.GestureRecognizers>
                            </Grid>
                        </Frame>

                        <!-- Limpeza -->
                        <Frame
                            CornerRadius="20"
                            Padding="0"
                            HasShadow="False"
                            HeightRequest="93"
                            WidthRequest="170"
                            Margin="0,0,25,0"
                            IsClippedToBounds="True"
                            BorderColor="Transparent">
                            <Grid>
                                <Image 
                                    Source="limpeza.png" 
                                    Aspect="AspectFill"
                                    HeightRequest="93"
                                    WidthRequest="170">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding LimpezaSolicitacoesCommand}" />
                                    </Image.GestureRecognizers>
                                </Image>
                                <BoxView 
                                    BackgroundColor="#00000066" 
                                    HeightRequest="40"/>
                                <Label 
                                    Text="Limpeza"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    FontSize="15"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Start"
                                    Margin="0,10"
                                    Padding="0,0,90,0"/>
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer 
                                        Command="{Binding LimpezaSolicitacoesCommand}" 
                                        CommandParameter="Limpeza" />
                                </Grid.GestureRecognizers>
                            </Grid>
                        </Frame>

                        <!-- Reparos -->
                        <Frame
                            CornerRadius="20"
                            Padding="0"
                            HasShadow="False"
                            HeightRequest="93"
                            WidthRequest="170"
                            Margin="0,0,0,25"
                            IsClippedToBounds="True"
                            BorderColor="Transparent">
                            <Grid>
                                <Image 
                                    Source="reparos.png" 
                                    Aspect="AspectFill"
                                    HeightRequest="93"
                                    WidthRequest="170">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding ReparosSolicitacoesCommand}" />
                                    </Image.GestureRecognizers>
                                </Image>
                                <BoxView 
                                    BackgroundColor="#00000066" 
                                    VerticalOptions="End"
                                    HeightRequest="40"/>
                                <Label 
                                    Text="Reparos"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    FontSize="15"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Start"
                                    Margin="0,10"
                                    Padding="0,0,90,0"/>
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer 
                                        Command="{Binding ReparosSolicitacoesCommand}" 
                                        CommandParameter="Reparos" />
                                </Grid.GestureRecognizers>
                            </Grid>
                        </Frame>

                        <!-- Jardinagem -->
                        <Frame
                            CornerRadius="20"
                            Padding="0"
                            HasShadow="False"
                            HeightRequest="93"
                            WidthRequest="170"
                            Margin="0,0,25,0"
                            IsClippedToBounds="True"
                            BorderColor="Transparent">
                            <Grid>
                                <Image 
                                    Source="jardinagem.png" 
                                    Aspect="AspectFill"
                                    HeightRequest="93"
                                    WidthRequest="170">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding JardinagemSolicitacoesCommand}" />
                                    </Image.GestureRecognizers>
                                </Image>
                                <BoxView 
                                    BackgroundColor="#00000066" 
                                    VerticalOptions="End"
                                    HeightRequest="40"/>
                                <Label 
                                    Text="Jardinagem"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    FontSize="15"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Start"
                                    Margin="0,10"
            Padding="0,0,60,0"/>
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer 
                                        Command="{Binding JardinagemSolicitacoesCommand}" 
                                        CommandParameter="Jardinagem" />
                                </Grid.GestureRecognizers>
                            </Grid>
                        </Frame>

                        <!-- Mecânico -->
                        <Frame
                            CornerRadius="20"
                            Padding="0"
                            HasShadow="False"
                            HeightRequest="93"
                            WidthRequest="170"
                            Margin="0,0,0,25"
                            IsClippedToBounds="True"
                            BorderColor="Transparent">
                            <Grid>
                                <Image 
                                    Source="mecanico.png" 
                                    Aspect="AspectFill"
                                    HeightRequest="93"
                                    WidthRequest="170">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding MecanicoSolicitacoesCommand}" />
                                    </Image.GestureRecognizers>
                                </Image>
                                <BoxView 
                                    BackgroundColor="#00000066" 
                                    VerticalOptions="End"
                                    HeightRequest="40"/>
                                <Label 
                                    Text="Mecânico"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    FontSize="15"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Start"
                                    Margin="0,10"
                                    Padding="0,0,75,0"/>
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer 
                                        Command="{Binding MecanicoSolicitacoesCommand}" 
                                        CommandParameter="Mecanico" />
                                </Grid.GestureRecognizers>
                            </Grid>
                        </Frame>

                        <!-- Pintura -->
                        <Frame
                            CornerRadius="20"
                            Padding="0"
                            HasShadow="False"
                            HeightRequest="93"
                            WidthRequest="170"
                            Margin="0,0,25,0"
                            IsClippedToBounds="True"
                            BorderColor="Transparent">
                            <Grid>
                                <Image 
                                    Source="pintura.png" 
                                    Aspect="AspectFill"
                                    HeightRequest="93"
                                    WidthRequest="170">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding PinturaSolicitacoesCommand}" />
                                    </Image.GestureRecognizers>
                                </Image>
                                <BoxView 
                                    BackgroundColor="#00000066" 
                                    VerticalOptions="End"
                                    HeightRequest="40"/>
                                <Label 
                                    Text="Pintura"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    FontSize="15"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Start"
                                    Margin="0,10"
                                    Padding="0,0,90,0"/>
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer 
                                        Command="{Binding PinturaSolicitacoesCommand}" 
                                        CommandParameter="Pintura" />
                                </Grid.GestureRecognizers>
                            </Grid>
                        </Frame>

                        <!-- Motorista -->
                        <Frame
                            CornerRadius="20"
                            Padding="0"
                            HasShadow="False"
                            HeightRequest="93"
                            WidthRequest="170"
                            Margin="0,0,0,25"
                            IsClippedToBounds="True"
                            BorderColor="Transparent">
                            <Grid>
                                <Image 
                                    Source="motorista.png"
                                    Aspect="AspectFill"
                                    HeightRequest="93"
                                    WidthRequest="170">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding MotoristaSolicitacoesCommand}" />
                                    </Image.GestureRecognizers>
                                </Image>
                                <BoxView 
                                    BackgroundColor="#00000066" 
                                    VerticalOptions="End"
                                    HeightRequest="40"/>
                                <Label 
                                    Text="Motorista"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    FontSize="15"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Start"
                                    Margin="0,10"
                                    Padding="0,0,75,0"/>
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer 
                                        Command="{Binding MotoristaSolicitacoesCommand}"
                                        CommandParameter="Motorista"/>
                                </Grid.GestureRecognizers>
                            </Grid>
                        </Frame>


                    </FlexLayout>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
      </ScrollView>
</ContentPage>
