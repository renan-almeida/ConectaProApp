<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConectaProApp.View.Prestador.BuscaPrestador"
             BackgroundColor="#f3f3f3">
    <ScrollView>
        
    
    <VerticalStackLayout>
        <!-- Logo -->
        <Image Source="logo_conectapro_preto.png" HeightRequest="100" WidthRequest="100" />

            <HorizontalStackLayout>
        <!-- Barra de Pesquisa -->
        <Frame 
            Padding="0"
            Margin="10,0,0,20"
            BackgroundColor="White"
            CornerRadius="15"
            BorderColor="#0F5CC2"
            HasShadow="False"
            HeightRequest="44"
            WidthRequest="300">

            <Grid ColumnDefinitions="Auto, *" VerticalOptions="Center">
                <!-- Ícone de lupa -->
                <Image 
                    Source="lupabusca.png" 
                    HeightRequest="16"
                    WidthRequest="16"
                    Margin="10,0"
                    VerticalOptions="Center"
                    HorizontalOptions="Start" />

                <!-- Campo de texto -->
                <Entry 
                    Grid.Column="1"
                    Placeholder="Busque suas solicitações"
                    Text="{Binding TermoBusca, Mode=TwoWay}"
                    FontSize="16"
                    WidthRequest="280"
                    HeightRequest="44"
                    BackgroundColor="Transparent"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"
                    TextColor="Black"
                    PlaceholderColor="Gray"
                    Margin="0"
                />
            </Grid>
        </Frame>
        
        <Button
            Command="{Binding AcionarBuscaCommand}"
            Text="➤" FontSize="18" CornerRadius="100"
            HeightRequest="45"
            WidthRequest="45"
            BackgroundColor="#0f5cc2"
            Margin="15,0,0,20"/>
            </HorizontalStackLayout>

            <!-- Categorias -->
<Frame 
    Padding="0"
    Margin="10"
    BackgroundColor="White"
    CornerRadius="15"
    HasShadow="False"
    HeightRequest="650"
    HorizontalOptions="Center"
    WidthRequest="390">

    <VerticalStackLayout>
        <Label Text="Categorias"
               TextColor="Black"
               FontSize="25"
               FontAttributes="Bold"
               Padding="23"/>

        <FlexLayout 
            Wrap="Wrap"
            Direction="Row"
            JustifyContent="Start"
            AlignItems="Start"
            AlignContent="Start"
            Margin="10">

            <!-- Tecnologia -->
                        <Frame
                            CornerRadius="20"
                            Padding="0"
                            HasShadow="False"
                            HeightRequest="93"
                            WidthRequest="155"
                            Margin="0,0,25,25"
                            IsClippedToBounds="True"
                            BorderColor="Transparent">
                            <Grid>
                                <Image 
                                    Source="tecnologia.png" 
                                    Aspect="AspectFill"
                                    HeightRequest="93"
                                    WidthRequest="155">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding TecnologiaSolicitacoesCommand}" />
                                    </Image.GestureRecognizers>
                                </Image>
                                <BoxView 
                                    BackgroundColor="#00000066" 
                                    HeightRequest="40"/>
                                <Label 
                                    Text="Tecnologia"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    FontSize="15"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Start"
                                    Margin="0,10"
                                    Padding="0,0,60,0"/>
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer 
                                        Command="{Binding TecnologiaSolicitacoesCommand}" 
                                        CommandParameter="Tecnologia" />
                                </Grid.GestureRecognizers>
                            </Grid>
                        </Frame>

                        <!-- Construção -->
                        <Frame
                            CornerRadius="20"
                            Padding="0"
                            HasShadow="False"
                            HeightRequest="93"
                            WidthRequest="155"
                            Margin="0,0,0,25"
                            IsClippedToBounds="True"
                            BorderColor="Transparent">
                            <Grid>
                                <Image 
                                    Source="construcao.png" 
                                    Aspect="AspectFill"
                                    HeightRequest="93"
                                    WidthRequest="155">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding ConstrucaoSolicitacoesCommand}" />
                                    </Image.GestureRecognizers>
                                </Image>
                                <BoxView 
                                    BackgroundColor="#00000066" 
                                    HeightRequest="40"/>
                                <Label 
                                    Text="Construção"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    FontSize="15"
                                    HorizontalOptions="Start"
                                    VerticalOptions="Start"
                                    Margin="0,10"
                                    Padding="10,2"/>
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer 
                                        Command="{Binding ConstrucaoSolicitacoesCommand}" 
                                        CommandParameter="Construcao" />
                                </Grid.GestureRecognizers>
                            </Grid>
                        </Frame>

                        <!-- Limpeza -->
                        <Frame
                            CornerRadius="20"
                            Padding="0"
                            HasShadow="False"
                            HeightRequest="93"
                            WidthRequest="155"
                            Margin="0,0,25,0"
                            IsClippedToBounds="True"
                            BorderColor="Transparent">
                            <Grid>
                                <Image 
                                    Source="limpeza.png" 
                                    Aspect="AspectFill"
                                    HeightRequest="93"
                                    WidthRequest="155">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding LimpezaSolicitacoesCommand}" />
                                    </Image.GestureRecognizers>
                                </Image>
                                <BoxView 
                                    BackgroundColor="#00000066" 
                                    HeightRequest="40"/>
                                <Label 
                                    Text="Limpeza"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    FontSize="15"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Start"
                                    Margin="0,10"
                                    Padding="0,0,90,0"/>
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer 
                                        Command="{Binding LimpezaSolicitacoesCommand}" 
                                        CommandParameter="Limpeza" />
                                </Grid.GestureRecognizers>
                            </Grid>
                        </Frame>

                        <!-- Marketing -->
                        <Frame
                            CornerRadius="20"
                            Padding="0"
                            HasShadow="False"
                            HeightRequest="93"
                            WidthRequest="155"
                            Margin="0,0,0,25"
                            IsClippedToBounds="True"
                            BorderColor="Black">

                            <Grid>
                                <Image 
                                    Source="marketing.png" 
                                    Aspect="AspectFill"
                                    HeightRequest="93"
                                    WidthRequest="155" >
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding MarketingSolicitacoesCommand}"/>
                                    </Image.GestureRecognizers>
                                </Image>
                                <BoxView 
                                    BackgroundColor="#00000066" 
                                    VerticalOptions="End"
                                    HeightRequest="40"/>
                                <Label 
                                    Text="Marketing"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    FontSize="15"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Start"
                                    Margin="6,10,70,0"/>
                                <Grid.GestureRecognizers>
                                            <TapGestureRecognizer 
                                                Command="{Binding MarketingSolicitacoesCommand}" 
                                                CommandParameter="MARKETING" />
                                </Grid.GestureRecognizers>
                            </Grid>
                        </Frame>

                        <!-- Jardinagem -->
                        <Frame
                            CornerRadius="20"
                            Padding="0"
                            HasShadow="False"
                            HeightRequest="93"
                            WidthRequest="155"
                            Margin="0,0,25,0"
                            IsClippedToBounds="True"
                            BorderColor="Transparent">
                            <Grid>
                                <Image 
                                    Source="jardinagem.png" 
                                    Aspect="AspectFill"
                                    HeightRequest="93"
                                    WidthRequest="155">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding JardinagemSolicitacoesCommand}" />
                                    </Image.GestureRecognizers>
                                </Image>
                                <BoxView 
                                    BackgroundColor="#00000066" 
                                    VerticalOptions="End"
                                    HeightRequest="40"/>
                                <Label 
                                    Text="Jardinagem"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    FontSize="15"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Start"
                                    Margin="0,10"
                                    Padding="0,0,60,0"/>
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer 
                                        Command="{Binding JardinagemSolicitacoesCommand}" 
                                        CommandParameter="Jardinagem" />
                                </Grid.GestureRecognizers>
                            </Grid>
                        </Frame>

                        <!-- Estética -->
                        <Frame
                              CornerRadius="20"
                              Padding="0"
                              HasShadow="False"
                              HeightRequest="93"
                              WidthRequest="155"
                              Margin="0,0,0,25"
                              IsClippedToBounds="True"
                              BorderColor="Black"
     >

                            <Grid>
                                <Image 
                                     Source="estetica.png" 
                                     Aspect="AspectFill"
                                     HeightRequest="93"
                                     WidthRequest="155" >
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding EsteticaSolicitacoesCommand}"/>
                                    </Image.GestureRecognizers>
                                </Image>
                                <BoxView 
                                     BackgroundColor="#00000066" 
                                     VerticalOptions="End"
                                     HeightRequest="40"/>
                                <Label 
                                     Text="Estetica"
                                     TextColor="White"
                                     FontAttributes="Bold"
                                     FontSize="15"
                                     HorizontalOptions="Center"
                                     VerticalOptions="Start"
                                     Margin="0,10,80,0"/>

                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer 
                                         Command="{Binding EsteticaSolicitacoesCommand}" 
                                         CommandParameter="ESTETICA" />
                                </Grid.GestureRecognizers>
                            </Grid>
                        </Frame>


                        <!-- Refrigeração -->
                        <Frame
                             CornerRadius="20"
                             Padding="0"
                             HasShadow="False"
                             HeightRequest="93"
                             WidthRequest="155"
                             Margin="4,0,25,0"
                             IsClippedToBounds="True"
                             BorderColor="Black">

                            <Grid>

                                <Image 
                                   Source="refrigeracao.png" 
                                   Aspect="AspectFill"
                                   HeightRequest="93"
                                   WidthRequest="155" >
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding RefrigeracaoSolicitacoesCommand}"/>
                                    </Image.GestureRecognizers>
                                </Image>

                                <BoxView 
                                       BackgroundColor="#00000066" 
                                       VerticalOptions="End"
                                       HeightRequest="40"/>

                                <Label 
                                     Text="Refrigeração"
                                     TextColor="White"
                                     FontAttributes="Bold"
                                     FontSize="15"
                                     HorizontalOptions="Center"
                                     VerticalOptions="Start"
                                     Margin="4,10"
                                      Padding="0,0,50,0"/>

                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer 
                                         Command="{Binding RefrigeracaoSolicitacoesCommand}" 
                                         CommandParameter="REFRIGERAÇÃO" />
                                </Grid.GestureRecognizers>
                            </Grid>
                        </Frame>

                        <!-- Elétrica -->
                        <Frame CornerRadius="20"
                                 Padding="0"
                                 HasShadow="False"
                                 HeightRequest="93"
                                 WidthRequest="155"
                                 Margin="0,0,0,25"
                                 IsClippedToBounds="True"
                                 BorderColor="Black">

                            <Grid>
                                <Image Source="eletrica.png"
                                        Aspect="AspectFill"
                                        HeightRequest="93"
                                    WidthRequest="155">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding EletricaSolicitacoesCommand}"/>
                                    </Image.GestureRecognizers>
                                </Image>
                                <BoxView 
                                     BackgroundColor="#00000066" 
                                     VerticalOptions="End"
                                     HeightRequest="40"/>
                                <Label Text="Elétrica"
                                        TextColor="White"
                                        FontAttributes="Bold"
                                        FontSize="15"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Start"
                                        Margin="0,10,80,0"/>

                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer 
                                         Command="{Binding EletricaSolicitacoesCommand}"
                                         CommandParameter="ELETRICA"/>
                                </Grid.GestureRecognizers>
                            </Grid>
                        </Frame>

                        <!-- DESIGN -->
                        <Frame
                             CornerRadius="20"
                             Padding="0"
                             HasShadow="False"
                             HeightRequest="93"
                             WidthRequest="155"
                             Margin="4,0,25,0"
                             IsClippedToBounds="True"
                             BorderColor="Black">

                            <Grid>

                                <Image 
                                   Source="design.png" 
                                   Aspect="AspectFill"
                                   HeightRequest="93"
                                   WidthRequest="155" >
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding DesignSolicitacoesCommand}"/>
                                    </Image.GestureRecognizers>
                                </Image>

                                <BoxView 
                                       BackgroundColor="#00000066" 
                                       VerticalOptions="End"
                                       HeightRequest="40"/>

                                <Label 
                                     Text="Design"
                                     TextColor="White"
                                     FontAttributes="Bold"
                                     FontSize="15"
                                     HorizontalOptions="Center"
                                     VerticalOptions="Start"
                                     Margin="4,10"
                                      Padding="0,0,90,0"/>

                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer 
                                         Command="{Binding DesignSolicitacoesCommand}" 
                                         CommandParameter="REFRIGERAÇÃO" />
                                </Grid.GestureRecognizers>
                            </Grid>
                        </Frame>

                        <!-- Outros -->
                        <Frame  CornerRadius="20"
                                  Padding="0"
                                  HasShadow="False"
                                  HeightRequest="93"
                                  WidthRequest="155"
                                  Margin="0,0,0,25"
                                  IsClippedToBounds="True"
                                  BorderColor="Black">

                            <Grid>
                                <Image Source="outros.png"
                                         Aspect="AspectFill"
                                         HeightRequest="93"
                                         WidthRequest="155">
                                </Image>
                                <BoxView 
                                      BackgroundColor="#00000066" 
                                      VerticalOptions="End"
                                      HeightRequest="40"/>
                                    <Label Text="Outros"
                                             TextColor="White"
                                             FontAttributes="Bold"
                                             FontSize="15"
                                             HorizontalOptions="Center"
                                             VerticalOptions="Start"
                                             Margin="0,10,65,0"/>

                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer 
                                         Command="{Binding OutrasSolicitacoesCommand}"/>
                                </Grid.GestureRecognizers>
                            </Grid>
                        </Frame>

                       
                    </FlexLayout>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
      </ScrollView>
</ContentPage>
