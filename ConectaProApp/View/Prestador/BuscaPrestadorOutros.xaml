<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConectaProApp.View.Prestador.BuscaPrestadorOutros"
             BackgroundColor="#f1f1f1">

    <ScrollView>
        <Grid RowDefinitions="Auto, *">
            <!-- Cabeçalho Azul -->
            <Grid VerticalOptions="Start" BackgroundColor="#020202" HeightRequest="58" Padding="10" RowSpacing="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Image  Source="iconevoltar.png"
                        HeightRequest="30"
                        WidthRequest="30"
                        VerticalOptions="Center"
                        Grid.Column="0">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnVoltarClicked" />
                    </Image.GestureRecognizers>
                </Image>

                <!-- Espaço vazio no centro -->
                <!-- . -->
                <!-- Foto do Prestador -->
                <Frame HeightRequest="40" WidthRequest="40"
                       CornerRadius="20"
                       HasShadow="False"
                       Padding="0"
                       BackgroundColor="White"
                       BorderColor="#0f5cc2"
                       VerticalOptions="Center"
                       HorizontalOptions="End"
                       Grid.Column="2">
                    <Image Source="prestadorsemfoto.png" 
                           Aspect="AspectFill" 
                           HeightRequest="40" WidthRequest="40">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnFotoPrestadorClicked"/>
                        </Image.GestureRecognizers>
                        <Image.Clip>
                            <EllipseGeometry Center="20,20" RadiusX="20" RadiusY="20"/>
                        </Image.Clip>
                    </Image>
                </Frame>
            </Grid>

            <VerticalStackLayout>
                <BoxView Opacity="0" HeightRequest="100" WidthRequest="100" />

                <HorizontalStackLayout>
                    <Frame Padding="0" Margin="10,0,0,20" BackgroundColor="White" CornerRadius="15"
                           BorderColor="#0F5CC2" HasShadow="False" HeightRequest="44" WidthRequest="300">
                        <Grid ColumnDefinitions="Auto, *" VerticalOptions="Center">
                            <Image Source="lupabusca.png" HeightRequest="16" WidthRequest="16" Margin="10,0"
                                   VerticalOptions="Center" HorizontalOptions="Start" />
                            <Entry Grid.Column="1" Placeholder="Busque suas solicitações"
                                   Text="{Binding TermoBusca, Mode=TwoWay}" FontSize="16" WidthRequest="280"
                                   HeightRequest="44" BackgroundColor="Transparent" VerticalOptions="Center"
                                   HorizontalOptions="Start" TextColor="Black" PlaceholderColor="Gray" Margin="0" />
                        </Grid>
                    </Frame>

                    <Button Command="{Binding AcionarBuscaCommand}" Text="➔" FontSize="18" CornerRadius="100"
                            HeightRequest="45" WidthRequest="45" BackgroundColor="#0f5cc2" Margin="15,0,0,20" />
                </HorizontalStackLayout>

                <Frame Padding="0" Margin="10" BackgroundColor="White" CornerRadius="15" HasShadow="False"
                       HorizontalOptions="Center" WidthRequest="413">
                    <VerticalStackLayout>
                        <Label Text="Categorias" TextColor="Black" FontSize="25" FontAttributes="Bold" Padding="23" />

                        <FlexLayout Wrap="Wrap" Direction="Row" JustifyContent="Start" AlignItems="Start" AlignContent="Start" Margin="10">
                            <Frame CornerRadius="20" Padding="0" HasShadow="False" HeightRequest="93" WidthRequest="155" Margin="4,0,25,0" IsClippedToBounds="True" BorderColor="Black">
                                <Grid>
                                    <Image Source="redes.png" Aspect="AspectFill" HeightRequest="93" WidthRequest="155" />
                                    <BoxView BackgroundColor="#00000066" HeightRequest="40" />
                                    <Label Text="Redes" TextColor="White" FontAttributes="Bold" FontSize="15" HorizontalOptions="Center" VerticalOptions="Start" Margin="0,10" />
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding RedesSolicitacoesCommand}" CommandParameter="REDES" />
                                    </Grid.GestureRecognizers>
                                </Grid>
                            </Frame>

                            <Frame CornerRadius="20" Padding="0" HasShadow="False" HeightRequest="93" WidthRequest="155" Margin="0,0,0,25" IsClippedToBounds="True" BorderColor="Black">
                                <Grid>
                                    <Image Source="telecomunicacoes.png" Aspect="AspectFill" HeightRequest="93" WidthRequest="155" />
                                    <BoxView BackgroundColor="#00000066" HeightRequest="40" />
                                    <Label Text="Telecomunicações" TextColor="White" FontAttributes="Bold" FontSize="13" HorizontalOptions="Start" VerticalOptions="Start" Margin="0,10" Padding="10,1,20,20" />
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding TelecomunicacoesSolicitacoesCommand}" CommandParameter="TELECOMUNICACOES" />
                                    </Grid.GestureRecognizers>
                                </Grid>
                            </Frame>

                            <Frame CornerRadius="20" Padding="0" HasShadow="False" HeightRequest="93" WidthRequest="155" Margin="4,0,25,0" IsClippedToBounds="True" BorderColor="Black">
                                <Grid>
                                    <Image Source="seguranca.png" Aspect="AspectFill" HeightRequest="93" WidthRequest="155" />
                                    <BoxView BackgroundColor="#00000066" HeightRequest="40" />
                                    <Label Text="Segurança" TextColor="White" FontAttributes="Bold" FontSize="13" HorizontalOptions="Center" VerticalOptions="Start" Margin="0,10" Padding="4,0,75,0" />
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding SegurancaSolicitacoesCommand}" CommandParameter="SEGURANÇA" />
                                    </Grid.GestureRecognizers>
                                </Grid>
                            </Frame>

                            <Frame CornerRadius="20" Padding="0" HasShadow="False" HeightRequest="93" WidthRequest="155" Margin="0,0,0,25" IsClippedToBounds="True" BorderColor="Black">
                                <Grid>
                                    <Image Source="monitoramento.png" Aspect="AspectFill" HeightRequest="93" WidthRequest="155" />
                                    <BoxView BackgroundColor="#00000066" HeightRequest="40" />
                                    <Label Text="Monitoramento" TextColor="White" FontAttributes="Bold" FontSize="14" HorizontalOptions="Center" VerticalOptions="Start" Margin="4,10,40,0" />
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding MonitoramentoSolicitacoesCommand}" CommandParameter="MONITORAMENTO" />
                                    </Grid.GestureRecognizers>
                                </Grid>
                            </Frame>

                            <Frame CornerRadius="20" Padding="0" HasShadow="False" HeightRequest="93" WidthRequest="155" Margin="4,0,25,0" IsClippedToBounds="True" BorderColor="Black">
                                <Grid>
                                    <Image Source="prestadorreparos.png" Aspect="AspectFill" HeightRequest="93" WidthRequest="155" />
                                    <BoxView BackgroundColor="#00000066" HeightRequest="40" />
                                    <Label Text="Reparos" TextColor="White" FontAttributes="Bold" FontSize="15" HorizontalOptions="Center" VerticalOptions="Start" Margin="0,10" Padding="0,0,80,0" />
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding ReparosSolicitacoesCommand}" CommandParameter="REPAROS" />
                                    </Grid.GestureRecognizers>
                                </Grid>
                            </Frame>

                            <Frame CornerRadius="20" Padding="0" HasShadow="False" HeightRequest="93" WidthRequest="155" Margin="0,0,0,25" IsClippedToBounds="True" BorderColor="Black">
                                <Grid>
                                    <Image Source="contabil.png" Aspect="AspectFill" HeightRequest="93" WidthRequest="155" />
                                    <BoxView BackgroundColor="#00000066" HeightRequest="40" />
                                    <Label Text="Contabil" TextColor="White" FontAttributes="Bold" FontSize="15" HorizontalOptions="Center" VerticalOptions="Start" Margin="2,10,75,0" />
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding ContabilSolicitacoesCommand}" CommandParameter="CONTABIL" />
                                    </Grid.GestureRecognizers>
                                </Grid>
                            </Frame>

                            <Frame CornerRadius="20" Padding="0" HasShadow="False" HeightRequest="93" WidthRequest="155" Margin="4,0,25,0" IsClippedToBounds="True" BorderColor="Black">
                                <Grid>
                                    <Image Source="beleza.png" Aspect="AspectFill" HeightRequest="93" WidthRequest="155" />
                                    <BoxView BackgroundColor="#00000066" HeightRequest="40" />
                                    <Label Text="Beleza" TextColor="White" FontAttributes="Bold" FontSize="15" HorizontalOptions="Center" VerticalOptions="Start" Margin="4,10" Padding="0,0,90,0" />
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding BelezaSolicitacoesCommand}" CommandParameter="BELEZA" />
                                    </Grid.GestureRecognizers>
                                </Grid>
                            </Frame>

                            <Frame CornerRadius="20" Padding="0" HasShadow="False" HeightRequest="93" WidthRequest="155" Margin="0,0,0,25" IsClippedToBounds="True" BorderColor="Black">
                                <Grid>
                                    <Image Source="automotivo.png" Aspect="AspectFill" HeightRequest="93" WidthRequest="155" />
                                    <BoxView BackgroundColor="#00000066" HeightRequest="40" />
                                    <Label Text="Automotivo" TextColor="White" FontAttributes="Bold" FontSize="15" HorizontalOptions="Center" VerticalOptions="Start" Margin="0,10,50,0" />
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding AutomotivoSolicitacoesCommand}" CommandParameter="AUTOMOTIVO" />
                                    </Grid.GestureRecognizers>
                                </Grid>
                            </Frame>
                        </FlexLayout>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>
