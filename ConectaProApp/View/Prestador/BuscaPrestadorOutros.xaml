<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConectaProApp.View.Prestador.BuscaPrestadorOutros"
             BackgroundColor="#f1f1f1">

    <ScrollView>
        <VerticalStackLayout>
            <!-- Logo -->
            <Image Source="logo_conectapro_preto.png" HeightRequest="100" WidthRequest="100" />

            <HorizontalStackLayout>
                <!-- Barra de Pesquisa -->
                <Frame Padding="0" Margin="10,0,0,20" BackgroundColor="White" CornerRadius="15"
                       BorderColor="#0F5CC2" HasShadow="False" HeightRequest="44" WidthRequest="300">
                    <Grid ColumnDefinitions="Auto, *" VerticalOptions="Center">
                        <Image Source="lupabusca.png" HeightRequest="16" WidthRequest="16" Margin="10,0"
                               VerticalOptions="Center" HorizontalOptions="Start" />
                        <Entry Grid.Column="1" Placeholder="Busque suas solicitações"
                               Text="{Binding TermoBusca, Mode=TwoWay}" FontSize="16" WidthRequest="280"
                               HeightRequest="44" BackgroundColor="Transparent" VerticalOptions="Center"
                               HorizontalOptions="Start" TextColor="Black" PlaceholderColor="Gray" Margin="0" />
                    </Grid>
                </Frame>

                <Button Command="{Binding AcionarBuscaCommand}" Text="➔" FontSize="18" CornerRadius="100"
                        HeightRequest="45" WidthRequest="45" BackgroundColor="#0f5cc2" Margin="15,0,0,20" />
            </HorizontalStackLayout>

            <!-- Categorias -->
            <Frame Padding="0" Margin="10" BackgroundColor="White" CornerRadius="15" HasShadow="False"
                   HorizontalOptions="Center" WidthRequest="390">
                <VerticalStackLayout>
                    <Label Text="Categorias" TextColor="Black" FontSize="25" FontAttributes="Bold" Padding="23" />

                    <!-- Grid com duas colunas -->
                    <Grid ColumnDefinitions="*,*" RowSpacing="20" ColumnSpacing="20" Padding="10">

                        <!-- Redes -->
                        <Frame Grid.Row="0" Grid.Column="0" CornerRadius="20" Padding="0" HasShadow="False"
                               HeightRequest="93" WidthRequest="155" IsClippedToBounds="True" BorderColor="Black">
                            <Grid>
                                <Image Source="redes.png" Aspect="AspectFill" HeightRequest="93" WidthRequest="155" />
                                <BoxView BackgroundColor="#00000066" HeightRequest="40" />
                                <Label Text="Redes" TextColor="White" FontAttributes="Bold" FontSize="15"
                                       HorizontalOptions="Center" VerticalOptions="Start" Margin="0,10"
                                       Padding="4,0,100,0" />
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding RedesSolicitacoesCommand}"
                                                          CommandParameter="REDES" />
                                </Grid.GestureRecognizers>
                            </Grid>
                        </Frame>

                        <!-- Telecomunicações -->
                        <Frame Grid.Row="0" Grid.Column="1" CornerRadius="20" Padding="0" HasShadow="False"
                               HeightRequest="93" WidthRequest="155" IsClippedToBounds="True" BorderColor="Black">
                            <Grid>
                                <Image Source="telecomunicacoes.png" Aspect="AspectFill" HeightRequest="93" WidthRequest="155" />
                                <BoxView BackgroundColor="#00000066" HeightRequest="40" />
                                <Label Text="Telecomunicações" TextColor="White" FontAttributes="Bold" FontSize="13"
                                       HorizontalOptions="Start" VerticalOptions="Start" Margin="0,10"
                                       Padding="10,1,20,20" />
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding TelecomunicacoesSolicitacoesCommand}"
                                                          CommandParameter="TELECOMUNICACOES" />
                                </Grid.GestureRecognizers>
                            </Grid>
                        </Frame>

                        <!-- Segurança -->
                        <Frame Grid.Row="1" Grid.Column="0" CornerRadius="20" Padding="0" HasShadow="False"
                               HeightRequest="93" WidthRequest="155" IsClippedToBounds="True" BorderColor="Black">
                            <Grid>
                                <Image Source="seguranca.png" Aspect="AspectFill" HeightRequest="93" WidthRequest="155" />
                                <BoxView BackgroundColor="#00000066" HeightRequest="40" />
                                <Label Text="Segurança" TextColor="White" FontAttributes="Bold" FontSize="13"
                                       HorizontalOptions="Center" VerticalOptions="Start" Margin="0,10"
                                       Padding="4,0,75,0" />
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding SegurancaSolicitacoesCommand}"
                                                          CommandParameter="SEGURANÇA" />
                                </Grid.GestureRecognizers>
                            </Grid>
                        </Frame>

                        <!-- Monitoramento -->
                        <Frame Grid.Row="1" Grid.Column="1" CornerRadius="20" Padding="0" HasShadow="False"
                               HeightRequest="93" WidthRequest="155" IsClippedToBounds="True" BorderColor="Black">
                            <Grid>
                                <Image Source="monitoramento.png" Aspect="AspectFill" HeightRequest="93" WidthRequest="155" />
                                <BoxView BackgroundColor="#00000066" HeightRequest="40" />
                                <Label Text="Monitoramento" TextColor="White" FontAttributes="Bold" FontSize="14"
                                       HorizontalOptions="Center" VerticalOptions="Start" Margin="4,10,40,0" />
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding MonitoramentoSolicitacoesCommand}"
                                                          CommandParameter="MONITORAMENTO" />
                                </Grid.GestureRecognizers>
                            </Grid>
                        </Frame>

                        <!-- Reparos -->
                        <Frame Grid.Row="2" Grid.Column="0" CornerRadius="20" Padding="0" HasShadow="False"
                               HeightRequest="93" WidthRequest="155" IsClippedToBounds="True" BorderColor="Black">
                            <Grid>
                                <Image Source="prestadorreparos.png" Aspect="AspectFill" HeightRequest="93" WidthRequest="155" />
                                <BoxView BackgroundColor="#00000066" HeightRequest="40" />
                                <Label Text="Reparos" TextColor="White" FontAttributes="Bold" FontSize="15"
                                       HorizontalOptions="Center" VerticalOptions="Start" Margin="0,10"
                                       Padding="0,0,80,0" />
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding ReparosSolicitacoesCommand}"
                                                          CommandParameter="REPAROS" />
                                </Grid.GestureRecognizers>
                            </Grid>
                        </Frame>

                        <!-- Contabil -->
                        <Frame Grid.Row="2" Grid.Column="1" CornerRadius="20" Padding="0" HasShadow="False"
                               HeightRequest="93" WidthRequest="155" IsClippedToBounds="True" BorderColor="Black">
                            <Grid>
                                <Image Source="contabil.png" Aspect="AspectFill" HeightRequest="93" WidthRequest="155" />
                                <BoxView BackgroundColor="#00000066" HeightRequest="40" />
                                <Label Text="Contabil" TextColor="White" FontAttributes="Bold" FontSize="15"
                                       HorizontalOptions="Center" VerticalOptions="Start" Margin="2,10,75,0" />
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding ContabilSolicitacoesCommand}"
                                                          CommandParameter="CONTABIL" />
                                </Grid.GestureRecognizers>
                            </Grid>
                        </Frame>

                        <!-- Beleza -->
                        <Frame Grid.Row="3" Grid.Column="0" CornerRadius="20" Padding="0" HasShadow="False"
                               HeightRequest="93" WidthRequest="155" IsClippedToBounds="True" BorderColor="Black">
                            <Grid>
                                <Image Source="beleza.png" Aspect="AspectFill" HeightRequest="93" WidthRequest="155" />
                                <BoxView BackgroundColor="#00000066" HeightRequest="40" />
                                <Label Text="Beleza" TextColor="White" FontAttributes="Bold" FontSize="15"
                                       HorizontalOptions="Center" VerticalOptions="Start" Margin="4,10"
                                       Padding="0,0,90,0" />
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding BelezaSolicitacoesCommand}"
                                                          CommandParameter="BELEZA" />
                                </Grid.GestureRecognizers>
                            </Grid>
                        </Frame>

                        <!-- Automotivo -->
                        <Frame Grid.Row="3" Grid.Column="1" CornerRadius="20" Padding="0" HasShadow="False"
                               HeightRequest="93" WidthRequest="155" IsClippedToBounds="True" BorderColor="Black">
                            <Grid>
                                <Image Source="automotivo.png" Aspect="AspectFill" HeightRequest="93" WidthRequest="155" />
                                <BoxView BackgroundColor="#00000066" HeightRequest="40" />
                                <Label Text="Automotivo" TextColor="White" FontAttributes="Bold" FontSize="15"
                                       HorizontalOptions="Center" VerticalOptions="Start" Margin="0,10,50,0" />
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding AutomotivoSolicitacoesCommand}"
                                                          CommandParameter="AUTOMOTIVO" />
                                </Grid.GestureRecognizers>
                            </Grid>
                        </Frame>
                    </Grid>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
