<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConectaProApp.View.Prestador.HomePrestador"
             BackgroundColor="#f1f1f1">
    <Grid RowDefinitions="Auto, *">
        <!-- Cabeçalho Azul -->
        <Grid BackgroundColor="#020202" HeightRequest="58" Padding="10" RowSpacing="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Logo ConectaPro -->
            <Image Source="conectapro_logo.png"
                   HeightRequest="40"
                   VerticalOptions="Center"
                   Grid.Column="0"/>

            <!-- Espaço vazio no meio, ou poderia usar um Label centralizado se quiser -->

            <!-- Foto Prestador -->
            <Frame HeightRequest="40" WidthRequest="40"
                   CornerRadius="20"
                   HasShadow="False"
                   Padding="0"
                   BackgroundColor="White"
                   BorderColor="#0f5cc2"
                   VerticalOptions="Center"
                   HorizontalOptions="End"
                   Grid.Column="2">
                <Image Source="{Binding FotoPrestadorUrl}" 
                       Aspect="AspectFill" 
                       HeightRequest="40" WidthRequest="40"
                       >
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnFotoPrestadorClicked"/>
                    </Image.GestureRecognizers>
                    <Image.Clip>
                        <EllipseGeometry 
                            Center="20,20"
                            RadiusX="20"
                            RadiusY="20"/>
                    </Image.Clip>
                </Image>
            </Frame>
        </Grid>

        <!-- Conteúdo Principal -->
        <Grid Grid.Row="1">
            <!-- Foto da Empresa como Fundo -->
            <Image Source="{Binding FotoEmpresaUrl}" 
                   Aspect="AspectFill" 
                   Opacity="0.7"/>

            <!-- Conteúdo sobre o fundo -->
            <StackLayout Padding="20" VerticalOptions="End" Spacing="10">

                <!-- Foto e Nome Empresa -->
                <HorizontalStackLayout VerticalOptions="Start" Spacing="10">
                    <Frame HeightRequest="53" WidthRequest="53"
                           CornerRadius="30"
                           HasShadow="False"
                           Padding="0"
                           BackgroundColor="White"
                           BorderColor="#0f5cc2">
                        <Image Source="{Binding FotoEmpresaUrl}" 
                               Aspect="AspectFill" 
                               HeightRequest="53" WidthRequest="53"
                               >
                            <Image.Clip>
                                <EllipseGeometry
                                    Center="30,30"
                                    RadiusX="30"
                                    RadiusY="30"/>
                            </Image.Clip>
                        </Image>
                    </Frame>

                    <VerticalStackLayout Spacing="2" Margin="16,22,0,0">
                        <Label Text="{Binding NomeFantasia}"
                               FontSize="30"
                               TextColor="Black"
                               />
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="Empresa, "
                                    FontSize="12"/>
                            <Label Text="{Binding Uf}"
                                    FontSize="12"
                                    TextColor="Black"/>
                        </HorizontalStackLayout>
                        
                    </VerticalStackLayout>
                </HorizontalStackLayout>

                <!-- Borda Opaca tipo vidro -->
                <Frame 
                    BackgroundColor="Transparent"
                    Opacity="20"
                    CornerRadius="10" 
                    HorizontalOptions="Center"
                    WidthRequest="341"
                    HeightRequest="82"
                    BorderColor="#0f5cc2"
                       >
                    <Label Text="{Binding DescricaoServico}"
                           FontSize="14"
                           TextColor="Black"/>
                </Frame>

                <!-- Botões -->
                <HorizontalStackLayout Spacing="48">
                    <Button Text="Candidatar"
                            FontSize="23"
                            BackgroundColor="#0f5cc2"
                            TextColor="White"
                            HeightRequest="63"
                            WidthRequest="150"
                            CornerRadius="10"
                            Margin="0,10,90,0"
                            BorderColor="White"
                            BorderWidth="1"
                            Command="{Binding CandidatarCommand}"/>

                    <Button Text="➤"
                            FontSize="25"
                            BackgroundColor="#0f5cc2"
                            HeightRequest="60"
                            WidthRequest="60"
                            TextColor="White"
                            CornerRadius="100"
                            HorizontalOptions="End"
                            Margin="0,10,0,0"
                             BorderColor="White"
                            BorderWidth="1"
                            Command="{Binding ProximoServicoCommand}"/>
                </HorizontalStackLayout>
            </StackLayout>
        </Grid>
    </Grid>

</ContentPage>