<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConectaProApp.View.Usuario.LoginView"
             Title="LoginView">

    <!-- Definição da imagem de fundo -->
    <ContentPage.BackgroundImageSource>
        <FileImageSource File="tela_inical.png)"/>
    </ContentPage.BackgroundImageSource>

    <VerticalStackLayout 
        Padding="30,0"
        Spacing="25"
        VerticalOptions="Center">

        <!-- Logo -->
        <Image
            Source="conectapro_logo.png"
            HeightRequest="129"
            WidthRequest="131"
            HorizontalOptions="Center"
            Aspect="AspectFit"/>
        <Label HorizontalOptions="Center">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="Conecta" 
                          TextColor="White" 
                          FontSize="36"
                          FontAttributes="Bold"/>

                    <Span Text=" Pro" 
                          TextColor="#0f5cc2" 
                          FontSize="36"
                          FontAttributes="Bold"/>
                </FormattedString>
            </Label.FormattedText>
        </Label>

    </VerticalStackLayout>

</ContentPage>
