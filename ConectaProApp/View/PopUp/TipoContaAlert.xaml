<?xml version="1.0" encoding="utf-8" ?>
<mopups:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
                  x:Class="ConectaProApp.PopUp.TipoContaAlert"
                  BackgroundColor="White">


    <Frame WidthRequest="364" HeightRequest="365"
           BackgroundColor="White"
           Padding="20"
           CornerRadius="30"
           BorderColor="Black" 
           HorizontalOptions="Center"
           VerticalOptions="Center">

        <VerticalStackLayout>
            <Label Text="Qual tipo de conta vocÃª deseja criar?" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center"/>

            <Button Text="Cliente" FontSize="25" BackgroundColor="#0f5cc2" WidthRequest="150" HeightRequest="70" TextColor="White"  Command="{Binding SelectedClient}"/>
            <Button Text="Prestador" FontSize="25" BackgroundColor="#0f5cc2" TextColor="White" WidthRequest="150" HeightRequest="70" Command="{Binding SelectedProvider}"/>
            <Label Text="CANCELAR" FontSize="16" TextColor="#C70202" HorizontalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="CancelPopup"/>
                </Label.GestureRecognizers>
            </Label>
        </VerticalStackLayout>

    </Frame>

</mopups:PopupPage>
