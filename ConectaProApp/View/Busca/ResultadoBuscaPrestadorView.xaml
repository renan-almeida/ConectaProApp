<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConectaProApp.View.Busca.ResultadoBuscaPrestadorView"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="10">

            <!-- Cabeçalho -->
            <Grid BackgroundColor="#020202"
                  HeightRequest="58"
                  Padding="10"
                  RowSpacing="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Image Source="iconevoltar.png"
                       HeightRequest="30"
                       WidthRequest="30"
                       VerticalOptions="Center"
                       Grid.Column="0">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnVoltarClicked" />
                    </Image.GestureRecognizers>
                </Image>

                <Frame HeightRequest="40"
                       WidthRequest="40"
                       CornerRadius="20"
                       HasShadow="False"
                       Padding="0"
                       BackgroundColor="White"
                       BorderColor="#0f5cc2"
                       VerticalOptions="Center"
                       HorizontalOptions="End"
                       Grid.Column="2">
                    <Image Source="prestadorsemfoto.png"
                           Aspect="AspectFill"
                           HeightRequest="40"
                           WidthRequest="40">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnFotoEmpresaClicked"/>
                        </Image.GestureRecognizers>
                        <Image.Clip>
                            <EllipseGeometry Center="20,20" RadiusX="20" RadiusY="20"/>
                        </Image.Clip>
                    </Image>
                </Frame>
            </Grid>

            <Label Text="{Binding TituloBusca}"
                   FontSize="Title"
                   HorizontalOptions="Center"
                   TextColor="Black"
                   Margin="0,10,0,0"/>

            <CollectionView ItemsSource="{Binding Servicos}"
                            Margin="0,10,0,20"
                            SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="15"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame CornerRadius="10"
                               Padding="12"
                               BackgroundColor="White"
                               HasShadow="True"
                               BorderColor="LightGray">

                            <VerticalStackLayout Spacing="6">
                                <Label Text="{Binding Nome}" FontAttributes="Bold" FontSize="15"/>

                                <HorizontalStackLayout Spacing="12">
                                    <Label Text="STATUS:" FontSize="10" FontAttributes="Bold"/>
                                    <Label Text="{Binding StServico}" FontSize="10" FontAttributes="Bold"/>
                                    <Label Text="URGÊNCIA:" FontSize="10" FontAttributes="Bold"/>
                                    <Label Text="{Binding NvlUrgenciaEnum}" FontSize="10"/>
                                </HorizontalStackLayout>

                                <HorizontalStackLayout Spacing="12">
                                    <Label Text="VALOR:" FontSize="10" FontAttributes="Bold"/>
                                    <Label Text="{Binding ValorServico}" FontSize="10" FontAttributes="Bold"/>
                                    <Label Text="CATEGORIA:" FontSize="10" FontAttributes="Bold"/>
                                    <Label Text="{Binding NomeSegmento}" FontSize="10"/>
                                </HorizontalStackLayout>

                                <HorizontalStackLayout Spacing="5">
                                    <Label Text="PAGAMENTO:" FontSize="10" FontAttributes="Bold"/>
                                    <Label Text="{Binding FormaPagamento}" FontSize="10"/>
                                </HorizontalStackLayout>

                                <!-- CANDIDATAR-SE à direita -->
                                <Grid ColumnDefinitions="*,Auto" Margin="0,5,0,0">
                                    <Label Grid.Column="1"
                                           Text="CANDIDATAR-SE"
                                           FontSize="14"
                                           TextColor="#0f5cc2">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding CandidatarCommand}" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                </Grid>

                                <!-- Descrição expandida -->
                                <Label Text="{Binding Descricao}"
                                       IsVisible="{Binding MostrarDescricao}"
                                       FontSize="12"
                                       TextColor="Gray"/>

                                
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
