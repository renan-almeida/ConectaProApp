<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConectaProApp.View.Usuario.LoginView"
             Title="LoginView">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            HorizontalOptions="Center"
            VerticalOptions="Center">

            <!--  
    <Image
     Source="conecta_pro_logo.png"
     HeightRequest="50"
     Aspect="AspectFit"
     HorizontalOptions="Center" />
    -->

        <Image
            Source="team_1.png"
             HeightRequest="185"
             Aspect="AspectFit"
             HorizontalOptions="Center" />

            <Label
                Text="Entrar"
                FontSize="24"
                FontAttributes="Bold"
                HorizontalOptions="Center" />

            <Label
                 Text="Faça login para começar a alavancar suas manutenções."
                 FontSize="14"
                 HorizontalOptions="Center"
                 TextColor="Gray" />

            <Entry
                 Placeholder="Digite seu Email"
                 Keyboard="Email"
                 HorizontalOptions="FillAndExpand" />

            <Entry
                 Placeholder="Digite sua senha"
                 IsPassword="True"
                 HorizontalOptions="FillAndExpand" />

            <Button
                 Text="Entrar"
                 BackgroundColor="Blue"
                 TextColor="White"
                 HorizontalOptions="FillAndExpand" />

            <Label
                 Text="Esqueceu a Senha?"
                 FontSize="14"
                 TextColor="Blue"
                 HorizontalOptions="Center"
                 VerticalOptions="End"
                 Margin="0,10,0,0" />

            <Label
                 Text="Não tem uma conta? Crie uma"
                 FontSize="14"
                 TextColor="Blue"
                 HorizontalOptions="Center"
                 VerticalOptions="End"
                 Margin="0,10,0,0" >
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnLabelTapped"/>
                </Label.GestureRecognizers>
            </Label>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>