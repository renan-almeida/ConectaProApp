<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConectaProApp.View.EsqueceuSenha.NewPassword"
             Title="NewPassword">
    <VerticalStackLayout Padding="30,0" Spacing="25">
        <Image Source="senhanova.png" HeightRequest="100" Aspect="AspectFit" HorizontalOptions="Center"/>
        <Label Text="Nova senha" FontSize="24" HorizontalOptions="Center"/>
        <Entry Placeholder="Digite sua nova senha" FontSize="15" IsPassword="True" HorizontalOptions="Fill"/>
        <Entry Placeholder="Confirme sua nova senha" FontSize="15" IsPassword="True" HorizontalOptions="Fill"/>
        <Button Text="Registrar nova senha" Command="{Binding RegistrarNovaSenhaCommand}" FontSize="25" BackgroundColor="#0f5cc2" TextColor="White" HeightRequest="48" HorizontalOptions="Fill"/>
    </VerticalStackLayout>
</ContentPage>