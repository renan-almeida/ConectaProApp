<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConectaProApp.View.EsqueceuSenha.PasswordCode"
             BackgroundColor="#F3F3F3">

   

        <VerticalStackLayout 
        HorizontalOptions="Center"
        VerticalOptions="Center"
        Spacing="10">
            <Image Source="logo_conectapro_preto.png" HeightRequest="100" Aspect="AspectFit" HorizontalOptions="Center"/>
            <Label
            Text="Digite o código de verificação enviado ao seu email"
            FontSize="14"
            HorizontalOptions="Center"
            TextColor="Black"/>
            <Entry Placeholder="Código de verificação" FontSize="15" HorizontalOptions="Fill"/>
            <Button Text="Verificar" Command="{Binding VerificarCodigoCommand}" FontSize="20" BackgroundColor="#0f5cc2" TextColor="White" HeightRequest="48" HorizontalOptions="Fill"/>
        </VerticalStackLayout>

    
</ContentPage>